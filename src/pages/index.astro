---
import Layout from "../layouts/Layout.astro";
import Benefits from "../sections/Benefits.astro";
import Contacto from "../sections/Contacto.astro";
import Data from "../sections/Data.astro";
import Footer from "../sections/Footer.astro";
import OffGrid from "../sections/OffGrid.astro";
import OnGrid from "../sections/OnGrid.astro";
import Data2 from "../sections/Data2.astro";
import Hero from "../sections/Hero.astro";

const title = "Energia Riojana | Home";
---

<Layout title={title}>
	<Hero />

	<main
		class="flex flex-col items-center justify-center text-gray-800 py-8 md:py-24 gap-8"
	>
		<Benefits />
		<Data />
		<OnGrid />
		<OffGrid />
		<Data2 />
		<Contacto />
	</main>
	<Footer />
</Layout>
